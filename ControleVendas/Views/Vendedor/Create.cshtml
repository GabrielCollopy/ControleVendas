@model Vendedor

<form method="post" asp-action="Create" asp-controller="Vendedor">

    @* @{
        if (ViewData["Mensagem"] != null)
        {
                    <div>
                        <span class="text-success">@ViewData["Mensagem"]</span>
                    </div>
        }
    } *@

    <div class="d-flex" style="flex-direction:column">
        <div>
            <div>
                <label asp-for="Id" class="form-label"></label>
            </div>
            <div>
                <input type="text" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div>
                <label asp-for="nome" class="form-label"></label>
            </div>
            <div>
                <input type="text" asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div>
                <label asp-for="email" class="form-label"></label>
            </div>
            <div>
                <input type="text" asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div>
                <label asp-for="cpf" class="form-label"></label>
            </div>
            <div>
                <input type="text" asp-for="cpf" class="form-control" />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button class="btn btn-primary">Cadastrar</button>
</form>

@section Scripts {
    <script>
        const mensagem = "@ViewData["Mensagem"]";
        if (mensagem != "") {
            alert(mensagem);
        }
    </script>
}